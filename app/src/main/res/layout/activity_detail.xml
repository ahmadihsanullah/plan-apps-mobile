<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_title"/>

    <TextView
        android:id="@+id/tv_label_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc"
        android:layout_below="@id/et_title"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_label_desc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="16dp"
        >
        <Button
            android:id="@+id/btn_save"
            android:backgroundTint="#12A718"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Plan"/>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_delete"
            android:backgroundTint="#e34949"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Plan"
            tools:visibility="visible"/>


    </LinearLayout>
</RelativeLayout>